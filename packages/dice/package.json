{
  "name": "@randsum/dice",
  "version": "0.1.18",
  "description": "A flexible, type-safe dice roller",
  "author": {
    "name": "Alex Jarvis",
    "url": "https://github.com/alxjrvs"
  },
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RANDSUM/randsum.git",
    "directory": "packages/dice"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build:pkg": "npx bunup",
    "build:command": "npx bunup src/command.ts --format esm,cjs --dts",
    "build": "bun run build:pkg && bun run build:command",
    "test": "bun test",
    "prepare": "bun run build",
    "prepack": "bun run build"
  },
  "dependencies": {
    "@randsum/core": "workspace:^",
    "@randsum/notation": "workspace:^"
  },
  "devDependencies": {
    "@types/bun": "1.2.6",
    "bunup": "^0.1.42"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "dice",
    "roller",
    "rpg",
    "random",
    "typescript",
    "dnd",
    "tabletop"
  ],
  "bin": {
    "randsum": "./dist/command.mjs"
  }
}
