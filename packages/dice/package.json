{
  "name": "@randsum/dice",
  "version": "0.1.32",
  "description": "A flexible, type-safe dice roller for tabletop RPGs, game development, and probability simulations",
  "author": {
    "name": "Alex Jarvis",
    "url": "https://github.com/alxjrvs"
  },
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RANDSUM/randsum.git",
    "directory": "packages/dice"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "bin"
  ],
  "sideEffects": false,
  "type": "module",
  "dependencies": {
    "@randsum/core": "workspace:*",
    "@randsum/notation": "workspace:*"
  },
  "scripts": {
    "build": "bunup --entry src/index.ts -o dist --format esm,cjs -m -d -s -t node -c",
    "test": "bun test",
    "lint": "eslint . -c ../../eslint.config.js",
    "lint:fix": "eslint . -c ../../eslint.config.js --fix",
    "format": "prettier . --check --ignore-path ../../.prettierignore",
    "format:fix": "prettier . --write --ignore-path ../../.prettierignore",
    "ts:check": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./D": {
      "import": {
        "types": "./dist/D.d.mts",
        "default": "./dist/D.mjs"
      },
      "require": {
        "types": "./dist/D.d.cts",
        "default": "./dist/D.cjs"
      }
    },
    "./roll": {
      "import": {
        "types": "./dist/roll.d.mts",
        "default": "./dist/roll.mjs"
      },
      "require": {
        "types": "./dist/roll.d.cts",
        "default": "./dist/roll.cjs"
      }
    },
    "./premadeDice": {
      "import": {
        "types": "./dist/premadeDice.d.mts",
        "default": "./dist/premadeDice.mjs"
      },
      "require": {
        "types": "./dist/premadeDice.d.cts",
        "default": "./dist/premadeDice.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "dice",
    "roller",
    "rpg",
    "random",
    "typescript",
    "dnd",
    "tabletop",
    "dice-roller",
    "ttrpg",
    "dungeons-and-dragons",
    "pathfinder",
    "game-development",
    "board-games",
    "role-playing-games",
    "probability",
    "simulation",
    "randsum"
  ],
  "bin": "./bin/randsum"
}