{
  "name": "@randsum/dice",
  "version": "0.0.1",
  "description": "A flexible, type-safe dice roller for TypeScript/JavaScript",
  "author": {
    "name": "Alex Jarvis",
    "url": "https://github.com/RANDSUM"
  },
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum-ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RANDSUM/-randsum.git",
    "directory": "packages/dice"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "bunup",
    "clean": "rm -rf ./dist/ ./coverage/",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "prebuild": "bun run clean",
    "prepare": "bun run build",
    "prepack": "bun run build"
  },
  "dependencies": {
    "@randsum/core": "workspace:*",
    "@randsum/notation": "workspace:*",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bun": "1.2.6",
    "bunup": "^0.1.39"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "dice",
    "roller",
    "rpg",
    "random",
    "typescript",
    "dnd",
    "tabletop"
  ]
}
