---
import DocsLayout from '../../layouts/DocsLayout.astro'
import CodeExample from '../../components/CodeExample.astro'
import { getPackageById } from '../../utils/packageData'

const pkg = getPackageById('blades')
if (!pkg) {
  throw new Error('Package not found')
}
---

<DocsLayout package={pkg} title="Documentation">
  <section class="installation">
    <h2>Installation</h2>
    <div class="install-box">
      <pre><code>npm install @randsum/blades
# or
bun add @randsum/blades</code></pre>
    </div>
  </section>

  <section class="examples">
    <h2>Examples</h2>
    {
      pkg.examples.map(example => {
        return <CodeExample code={example.code} language={example.language} title={example.title} />
      })
    }
  </section>

  <section class="documentation">
    <h2>About Blades in the Dark</h2>
    <p>
      The <code>@randsum/blades</code> package provides mechanics for
      <a
        href="https://www.evilhat.com/home/blades-in-the-dark/"
        target="_blank"
        rel="noopener noreferrer"
      >
        Blades in the Dark
      </a>, a tabletop RPG about a crew of daring scoundrels seeking their fortunes on the haunted
      streets of an industrial-fantasy city.
    </p>
    <p>
      This package implements action rolls, resistance rolls, fortune rolls, and other core
      mechanics from the Blades in the Dark system.
    </p>
    <p>
      For more information, see the
      <a
        href={`https://github.com/RANDSUM/randsum/tree/main/packages/${pkg.name}`}
        target="_blank"
        rel="noopener noreferrer"
      >
        package source code
      </a>.
    </p>
  </section>
</DocsLayout>

<style>
  .installation {
    margin-bottom: var(--spacing-2xl);
  }

  .install-box {
    margin-top: var(--spacing-md);
  }

  .examples {
    margin-bottom: var(--spacing-2xl);
  }

  .documentation {
    margin-bottom: var(--spacing-2xl);
  }

  .documentation p {
    margin-bottom: var(--spacing-md);
    line-height: 1.8;
  }
</style>
