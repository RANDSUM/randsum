---
import BaseLayout from '../layouts/BaseLayout.astro'
import Playground from '../components/Playground'
---

<BaseLayout
  title="Notation Playground"
  description="Interactive dice notation playground. Test and validate RANDSUM dice notation in real-time."
  keywords={['playground', 'dice notation', 'interactive', 'validator', 'RANDSUM']}
>
  <div class="playground-page">
    <section class="playground-header">
      <div class="container">
        <h1>Dice Notation Playground</h1>
        <p class="playground-description">
          Test and validate RANDSUM dice notation in real-time. Enter notation below to see it parsed, validated, and rolled.
        </p>
      </div>
    </section>

    <section class="playground-content">
      <div class="container">
        <Playground client:load />
      </div>
    </section>

    <section class="playground-info">
      <div class="container">
        <h2>Notation Reference</h2>
        <div class="notation-reference">
          <div class="reference-category">
            <h3>Basic Dice</h3>
            <div class="reference-items">
              <div class="reference-item">
                <code>2d6</code>
                <span>Roll 2 six-sided dice</span>
              </div>
              <div class="reference-item">
                <code>1d20</code>
                <span>Roll 1 twenty-sided die</span>
              </div>
              <div class="reference-item">
                <code>4d8</code>
                <span>Roll 4 eight-sided dice</span>
              </div>
            </div>
          </div>

          <div class="reference-category">
            <h3>Drop Modifiers</h3>
            <div class="reference-items">
              <div class="reference-item">
                <code>4d6L</code>
                <span>Drop lowest (D&D ability scores)</span>
              </div>
              <div class="reference-item">
                <code>4d6H</code>
                <span>Drop highest</span>
              </div>
              <div class="reference-item">
                <code>2d20L</code>
                <span>Advantage (keep highest)</span>
              </div>
              <div class="reference-item">
                <code>2d20H</code>
                <span>Disadvantage (keep lowest)</span>
              </div>
            </div>
          </div>

          <div class="reference-category">
            <h3>Reroll & Exploding</h3>
            <div class="reference-items">
              <div class="reference-item">
                <code>4d6R{'{1}'}</code>
                <span>Reroll 1s</span>
              </div>
              <div class="reference-item">
                <code>4d6R{'{<3}'}</code>
                <span>Reroll below 3</span>
              </div>
              <div class="reference-item">
                <code>3d6!</code>
                <span>Exploding dice</span>
              </div>
            </div>
          </div>

          <div class="reference-category">
            <h3>Arithmetic</h3>
            <div class="reference-items">
              <div class="reference-item">
                <code>1d20+5</code>
                <span>Add 5 to total</span>
              </div>
              <div class="reference-item">
                <code>2d6-2</code>
                <span>Subtract 2 from total</span>
              </div>
              <div class="reference-item">
                <code>1d20+5-2</code>
                <span>Multiple modifiers</span>
              </div>
            </div>
          </div>

          <div class="reference-category">
            <h3>Advanced</h3>
            <div class="reference-items">
              <div class="reference-item">
                <code>8d6U</code>
                <span>Unique (no duplicates)</span>
              </div>
              <div class="reference-item">
                <code>4d20C{'{>18}'}</code>
                <span>Cap maximum at 18</span>
              </div>
              <div class="reference-item">
                <code>4d6LR{'{1}'}+3</code>
                <span>Combined modifiers</span>
              </div>
            </div>
          </div>
        </div>
        <p class="info-note">
          For complete notation documentation, see the{' '}
          <a href="/packages/roller">roller package documentation</a>.
        </p>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .playground-page {
    padding: var(--spacing-xl) 0;
  }

  .playground-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    padding-bottom: var(--spacing-xl);
    border-bottom: var(--border-width) solid var(--color-border);
  }

  .playground-header h1 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-md);
  }

  .playground-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-alt);
    max-width: 700px;
    margin: 0 auto;
  }

  .playground-content {
    margin-bottom: var(--spacing-2xl);
  }

  .playground-info {
    margin-top: var(--spacing-3xl);
    padding-top: var(--spacing-2xl);
    border-top: var(--border-width) solid var(--color-border);
  }

  .playground-info h2 {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .notation-reference {
    max-width: 900px;
    margin: 0 auto var(--spacing-lg);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
  }

  .reference-category {
    background: var(--color-bg-alt);
    border-radius: 8px;
    padding: var(--spacing-lg);
    border: var(--border-width) solid var(--color-border);
  }

  .reference-category h3 {
    font-size: var(--font-size-md);
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--color-border);
  }

  .reference-items {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .reference-item {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-sm);
    font-size: var(--font-size-sm);
  }

  .reference-item code {
    font-family: var(--font-family-mono);
    background: var(--color-bg);
    padding: 2px 8px;
    border-radius: 4px;
    color: var(--color-primary);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .reference-item span {
    color: var(--color-text-alt);
  }

  .info-note {
    text-align: center;
    color: var(--color-text-alt);
    font-size: var(--font-size-sm);
    margin-top: var(--spacing-xl);
  }

  @media (max-width: 768px) {
    .notation-reference {
      grid-template-columns: 1fr;
    }
  }
</style>

<style is:global>
  /* Playground React Component Styles */
  .playground-container {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: var(--spacing-xl);
    max-width: 1100px;
    margin: 0 auto;
  }

  @media (max-width: 900px) {
    .playground-container {
      grid-template-columns: 1fr;
    }
  }

  .playground-main {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .playground-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-label {
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-lg);
  }

  .input-row {
    display: flex;
    gap: var(--spacing-md);
  }

  .notation-input {
    flex: 1;
    padding: var(--spacing-md);
    font-size: var(--font-size-lg);
    font-family: var(--font-family-mono);
    border: 2px solid var(--color-border);
    border-radius: 8px;
    background: var(--color-bg);
    color: var(--color-text);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .notation-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb, 59, 130, 246), 0.15);
  }

  .notation-input.valid {
    border-color: var(--color-success, #22c55e);
  }

  .notation-input.invalid {
    border-color: var(--color-error, #ef4444);
  }

  .roll-button {
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.2s, transform 0.1s;
    min-width: 100px;
  }

  .roll-button:hover:not(:disabled) {
    background: var(--color-primary-dark, #2563eb);
  }

  .roll-button:active:not(:disabled) {
    transform: scale(0.98);
  }

  .roll-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .roll-button.rolling {
    animation: shake 0.3s ease-in-out;
  }

  @keyframes shake {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-10deg); }
    75% { transform: rotate(10deg); }
  }

  .examples-section {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .examples-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-alt);
  }

  .example-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .example-btn {
    padding: var(--spacing-xs) var(--spacing-sm);
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    background: var(--color-bg-alt);
    color: var(--color-text);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.15s;
  }

  .example-btn:hover {
    background: var(--color-bg);
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .example-btn.active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }

  /* Validation Feedback */
  .validation-section {
    min-height: 60px;
  }

  .validation-error {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md);
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid var(--color-error, #ef4444);
    border-radius: 6px;
    color: var(--color-error, #ef4444);
  }

  .error-icon {
    font-weight: bold;
    font-size: var(--font-size-lg);
  }

  .validation-success {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    padding: var(--spacing-md);
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid var(--color-success, #22c55e);
    border-radius: 6px;
    color: var(--color-success, #22c55e);
  }

  .success-icon {
    font-weight: bold;
    font-size: var(--font-size-lg);
  }

  .validation-details {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .notation-description {
    font-size: var(--font-size-sm);
    opacity: 0.9;
  }

  /* Latest Result */
  .latest-result {
    background: var(--color-bg-alt);
    border: var(--border-width) solid var(--color-border);
    border-radius: 12px;
    padding: var(--spacing-lg);
    box-shadow: var(--shadow-md);
  }

  .result-header {
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--color-border);
  }

  .result-header h3 {
    font-size: var(--font-size-md);
    margin: 0;
  }

  .result-header code {
    font-family: var(--font-family-mono);
    background: var(--color-bg);
    padding: 2px 8px;
    border-radius: 4px;
    color: var(--color-primary);
  }

  /* Roll Result Display */
  .roll-result {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .result-total {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background: var(--color-bg);
    border-radius: 8px;
    text-align: center;
  }

  .total-label {
    font-size: var(--font-size-md);
    color: var(--color-text-alt);
  }

  .total-value {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    font-family: var(--font-family-mono);
  }

  .roll-record {
    padding: var(--spacing-md);
    background: var(--color-bg);
    border-radius: 8px;
  }

  .roll-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .dice-values {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .values-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-alt);
    min-width: 110px;
  }

  .dice-list {
    display: flex;
    gap: var(--spacing-xs);
    flex-wrap: wrap;
  }

  .die-value {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 32px;
    height: 32px;
    padding: 0 var(--spacing-xs);
    font-family: var(--font-family-mono);
    font-weight: var(--font-weight-semibold);
    border-radius: 6px;
    font-size: var(--font-size-sm);
  }

  .die-value.raw {
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
  }

  .die-value.kept {
    background: rgba(34, 197, 94, 0.15);
    border: 1px solid var(--color-success, #22c55e);
    color: var(--color-success, #22c55e);
  }

  .die-value.dropped {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid var(--color-error, #ef4444);
    color: var(--color-error, #ef4444);
    text-decoration: line-through;
    opacity: 0.6;
  }

  .modifier-arrow {
    text-align: center;
    color: var(--color-text-alt);
    font-size: var(--font-size-lg);
  }

  .modifier-history {
    margin-top: var(--spacing-sm);
    padding-top: var(--spacing-sm);
    border-top: 1px dashed var(--color-border);
  }

  .history-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-alt);
    display: block;
    margin-bottom: var(--spacing-xs);
  }

  .modifier-logs {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .modifier-log {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 2px 8px;
    background: var(--color-bg-alt);
    border-radius: 4px;
    font-size: var(--font-size-xs);
  }

  .modifier-name {
    font-weight: var(--font-weight-semibold);
  }

  .modifier-removed {
    color: var(--color-error, #ef4444);
  }

  .modifier-added {
    color: var(--color-success, #22c55e);
  }

  .roll-subtotal {
    margin-top: var(--spacing-sm);
    padding-top: var(--spacing-sm);
    border-top: 1px solid var(--color-border);
    font-size: var(--font-size-sm);
    text-align: right;
    color: var(--color-text-alt);
  }

  /* History Section */
  .history-section {
    background: var(--color-bg-alt);
    border: var(--border-width) solid var(--color-border);
    border-radius: 12px;
    padding: var(--spacing-lg);
    height: fit-content;
    max-height: 600px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .history-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--color-border);
  }

  .history-header h3 {
    font-size: var(--font-size-md);
    margin: 0;
  }

  .clear-history-btn {
    padding: var(--spacing-xs) var(--spacing-sm);
    font-size: var(--font-size-xs);
    background: transparent;
    color: var(--color-text-alt);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.15s;
  }

  .clear-history-btn:hover {
    background: var(--color-bg);
    color: var(--color-error, #ef4444);
    border-color: var(--color-error, #ef4444);
  }

  .history-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    overflow-y: auto;
    flex: 1;
  }

  .history-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-sm);
    background: var(--color-bg);
    border-radius: 6px;
    transition: background 0.15s;
  }

  .history-item.latest {
    background: rgba(var(--color-primary-rgb, 59, 130, 246), 0.1);
    border: 1px solid var(--color-primary);
  }

  .history-notation code {
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
  }

  .history-result {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 2px;
  }

  .history-total {
    font-family: var(--font-family-mono);
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
    color: var(--color-primary);
  }

  .history-dice {
    font-family: var(--font-family-mono);
    font-size: var(--font-size-xs);
    color: var(--color-text-alt);
  }

  @media (max-width: 768px) {
    .input-row {
      flex-direction: column;
    }

    .roll-button {
      width: 100%;
    }

    .history-section {
      max-height: 300px;
    }
  }
</style>
