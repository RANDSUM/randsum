---
const currentPath = Astro.url.pathname
const isHome = currentPath === '/'
---

<nav class="navigation">
  <div class="container">
    <div class="nav-content">
      <a href="/" class="nav-logo">
        <img src="/randsum-logo.png" alt="RANDSUM" class="nav-logo-image" />
        <span class="nav-logo-text">RANDSUM</span>
      </a>
      <ul class="nav-links">
        <li>
          <a href="/" class={isHome ? 'nav-link nav-link-active' : 'nav-link'}> Home </a>
        </li>
        <li>
          <a
            href="/getting-started/"
            class={currentPath.includes('/getting-started') ? 'nav-link nav-link-active' : 'nav-link'}
          >
            Getting Started
          </a>
        </li>
        <li>
          <a
            href="/packages/roller/"
            class={currentPath.includes('/packages/roller')
              ? 'nav-link nav-link-active'
              : 'nav-link'}
          >
            Roller
          </a>
        </li>
        <li>
          <a
            href="/games/"
            class={currentPath.includes('/games') ? 'nav-link nav-link-active' : 'nav-link'}
          >
            Games
          </a>
        </li>
        <li>
          <a
            href="/tools/"
            class={currentPath.includes('/tools') ? 'nav-link nav-link-active' : 'nav-link'}
          >
            Tools
          </a>
        </li>
        <li>
          <a
            href="/playground/"
            class={currentPath.includes('/playground') ? 'nav-link nav-link-active' : 'nav-link'}
          >
            Playground
          </a>
        </li>
      </ul>
      <a
        href="https://discord.com/oauth2/authorize?client_id=1290434147159904276&permissions=274877906944&scope=bot%20applications.commands"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-discord-button"
      >
        <svg class="discord-icon" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
          ></path>
        </svg>
        Add to Discord
      </a>
    </div>
  </div>
</nav>

<style>
  .navigation {
    background-color: var(--color-bg);
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
    border-bottom: var(--border-width) solid var(--color-border);
    backdrop-filter: blur(8px);
    background-color: rgba(255, 255, 255, 0.95);
  }
  
  @media (prefers-color-scheme: dark) {
    .navigation {
      background-color: rgba(15, 23, 42, 0.95);
    }
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) 0;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    text-decoration: none;
    color: var(--color-text);
    border-bottom: var(--border-width) solid transparent;
    transition: border-color var(--transition-fast);
  }

  .nav-logo:hover {
    border-bottom-color: var(--color-primary);
  }

  .nav-logo-image {
    height: 40px;
    width: auto;
    object-fit: contain;
  }

  .nav-logo-text {
    letter-spacing: -0.02em;
  }

  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: var(--spacing-lg);
    align-items: center;
  }

  .nav-link {
    font-weight: var(--font-weight-medium);
    text-decoration: none;
    color: var(--color-text-alt);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-bottom: var(--border-width) solid transparent;
    transition: border-color var(--transition-fast), color var(--transition-fast);
  }

  .nav-link:hover {
    color: var(--color-text);
    border-bottom-color: var(--color-primary);
  }
  
  .nav-link-active {
    color: var(--color-text);
    border-bottom-color: var(--color-primary);
    font-weight: var(--font-weight-semibold);
  }

  .nav-discord-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-md);
    background-color: #5865f2;
    color: #ffffff;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-sm);
    text-decoration: none;
    border-radius: 4px;
    transition:
      background-color 0.2s ease,
      transform 0.1s ease;
    white-space: nowrap;
    box-shadow: 0 2px 4px rgba(88, 101, 242, 0.3);
    margin-left: var(--spacing-md);
  }

  .nav-discord-button:hover {
    background-color: #4752c4;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(88, 101, 242, 0.4);
  }

  .nav-discord-button:active {
    transform: translateY(0);
    box-shadow: 0 2px 4px rgba(88, 101, 242, 0.3);
  }

  .nav-discord-button .discord-icon {
    flex-shrink: 0;
    width: 18px;
    height: 18px;
  }

  @media (max-width: 768px) {
    .nav-content {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .nav-links {
      flex-wrap: wrap;
      justify-content: center;
      gap: var(--spacing-md);
    }

    .nav-discord-button {
      margin-left: 0;
      margin-top: var(--spacing-sm);
    }
  }
</style>
