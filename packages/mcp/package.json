{
  "name": "@randsum/mcp",
  "version": "1.1.0",
  "description": "Model Context Protocol server for RANDSUM dice rolling and game mechanics",
  "private": false,
  "author": {
    "name": "Alex Jarvis",
    "url": "https://github.com/alxjrvs"
  },
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RANDSUM/randsum.git",
    "directory": "packages/mcp"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "@randsum/blades": "workspace:~",
    "@randsum/daggerheart": "workspace:~",
    "@randsum/fifth": "workspace:~",
    "@randsum/pbta": "workspace:~",
    "@randsum/roller": "workspace:~",
    "@randsum/root-rpg": "workspace:~",
    "@randsum/salvageunion": "workspace:~",
    "commander": "^12.1.0",
    "zod": "^4.3.6"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "dice",
    "roller",
    "rpg",
    "random",
    "typescript",
    "tabletop",
    "ttrpg",
    "game-development",
    "board-games",
    "role-playing-games",
    "randsum",
    "claude",
    "llm",
    "ai-tools"
  ],
  "bin": {
    "randsum-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "bunup --entry src/index.ts --format esm,cjs --dts --minify --sourcemap external --target node --clean && chmod +x dist/index.js",
    "test": "bun test",
    "lint": "eslint . -c ../../eslint.config.js",
    "format": "prettier --write . --ignore-path ../../.prettierignore --config ../../.prettierrc",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --config ../../.prettierrc",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js --transport http"
  }
}
