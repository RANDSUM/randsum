{
  "name": "@randsum/mcp",
  "version": "0.27.0",
  "description": "Model Context Protocol server for RANDSUM dice rolling and game mechanics",
  "private": false,
  "author": {
    "name": "Alex Jarvis",
    "url": "https://github.com/alxjrvs"
  },
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RANDSUM/randsum.git",
    "directory": "packages/mcp"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.14.0",
    "@randsum/roller": "workspace:~",
    "@randsum/shared": "workspace:~",
    "commander": "^12.1.0",
    "zod": "^3.25.71"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "dice",
    "roller",
    "rpg",
    "random",
    "typescript",
    "tabletop",
    "ttrpg",
    "game-development",
    "board-games",
    "role-playing-games",
    "randsum",
    "claude",
    "llm",
    "ai-tools"
  ],
  "bin": {
    "randsum-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "bunup --entry src/index.ts --format esm --dts --minify --sourcemap external --target node --clean && chmod +x dist/index.js",
    "test": "bun test",
    "lint": "eslint . -c ../../eslint.config.js",
    "format": "prettier --write . --ignore-path ../../.prettierignore --config ../../.prettierrc",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --config ../../.prettierrc",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js --transport http"
  }
}
