{
  "name": "@randsum/salvageunion",
  "version": "0.1.19",
  "description": "A flexible, type-safe dice roller for the Salvage Union system",
  "author": {
    "name": "Alex Jarvis",
    "url": "https://github.com/alxjrvs"
  },
  "sideEffects": false,
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RANDSUM/randsum.git",
    "directory": "packages/salvageunion"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npx bunup",
    "test": "bun test",
    "prepare": "bun run build",
    "prepack": "bun run build"
  },
  "dependencies": {
    "@randsum/dice": "workspace:^"
  },
  "devDependencies": {
    "@types/bun": "1.2.8",
    "bunup": "^0.3.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "prettier": {
    "endOfLine": "auto",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "embeddedLanguageFormatting": "auto"
  }
}
