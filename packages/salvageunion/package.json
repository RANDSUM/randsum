{
  "name": "@randsum/salvageunion",
  "version": "0.37.0",
  "description": "A flexible, type-safe dice roller for the Salvage Union system",
  "private": false,
  "author": {
    "name": "Alex Jarvis",
    "url": "https://github.com/alxjrvs"
  },
  "sideEffects": false,
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RANDSUM/randsum.git",
    "directory": "packages/salvageunion"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@randsum/roller": "workspace:~",
    "salvageunion-reference": "^2.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "dice",
    "roller",
    "rpg",
    "random",
    "typescript",
    "tabletop",
    "salvage-union"
  ],
  "scripts": {
    "build": "bunup --entry src/index.ts --format esm,cjs --minify --sourcemap external --target node --clean && tsc --emitDeclarationOnly",
    "test": "bun test",
    "lint": "eslint . -c ../../eslint.config.js",
    "format": "prettier --write . --ignore-path ../../.prettierignore --config ../../.prettierrc",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --config ../../.prettierrc",
    "typecheck": "tsc --noEmit"
  }
}
