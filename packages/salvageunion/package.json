{
  "name": "@randsum/salvageunion",
  "version": "0.1.32",
  "description": "A flexible, type-safe dice roller for the Salvage Union system",
  "author": {
    "name": "Alex Jarvis",
    "url": "https://github.com/alxjrvs"
  },
  "sideEffects": false,
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RANDSUM/randsum.git",
    "directory": "packages/salvageunion"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@randsum/dice": "workspace:*"
  },
  "scripts": {
    "build": "bunup --entry src/index.ts -o dist --format esm,cjs -m -d -s -t node -c",
    "test": "bun test",
    "lint": "eslint . -c ../../eslint.config.js",
    "lint:fix": "eslint . -c ../../eslint.config.js --fix",
    "format": "prettier . --check --ignore-path ../../.prettierignore",
    "format:fix": "prettier . --write --ignore-path ../../.prettierignore",
    "ts:check": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "dice",
    "roller",
    "rpg",
    "random",
    "typescript",
    "tabletop",
    "salvage-union"
  ]
}