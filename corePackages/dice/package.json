{
  "name": "@randsum/dice",
  "version": "0.2.7",
  "description": "A flexible, type-safe dice roller for tabletop RPGs, game development, and probability simulations",
  "private": false,
  "author": {
    "name": "Alex Jarvis",
    "url": "https://github.com/alxjrvs"
  },
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RANDSUM/randsum.git",
    "directory": "corePackages/dice"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "bin"
  ],
  "sideEffects": false,
  "type": "module",
  "dependencies": {
    "@randsum/core": "workspace:~",
    "@randsum/notation": "workspace:~"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "dice",
    "roller",
    "rpg",
    "random",
    "typescript",
    "dnd",
    "tabletop",
    "dice-roller",
    "ttrpg",
    "dungeons-and-dragons",
    "pathfinder",
    "game-development",
    "board-games",
    "role-playing-games",
    "probability",
    "simulation",
    "randsum"
  ],
  "bin": "./bin/randsum"
}
