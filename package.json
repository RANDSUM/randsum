{
  "name": "randsum",
  "description": "Random Numbers, free of charge",
  "license": "MIT",
  "author": "Alex Jarvis",
  "repository": {
    "type": "git",
    "url": "https://github.com/alxjrvs/randsum.git"
  },
  "version": "0.3.4",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc -p .",
    "test": "jest",
    "generate:docs": "typedoc --out docs src --exclude src/**/index.ts --exclude src/**/**/*.test.ts  --theme minimal",
    "test:debug": "node --inspect-brk node_modules/.bin/jest -o --runInBand",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "watch-build": "tsc -w -p ."
  },
  "files": [
    "build/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "codecov": "^3.6.1",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "typedoc": "^0.15.0",
    "typescript": "~3.6.3",
    "yarn": "^1.19.0"
  },
  "keywords": [
    "chance",
    "dice",
    "dice rolls",
    "rpg",
    "rpgs",
    "die",
    "die rolling",
    "rand",
    "rolling",
    "typescript"
  ],
  "engines": {
    "node": ">=6.2.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "rootDir": "src/"
  }
}
