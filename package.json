{
  "name": "randsum",
  "description": "Random Numbers, free of charge",
  "license": "MIT",
  "author": "Alex Jarvis",
  "repository": {
    "type": "git",
    "url": "https://github.com/alxjrvs/randsum.git"
  },
  "version": "0.3.4",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc -p .",
    "docs": "typedoc --options ./typedoc.json",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest -o --runInBand",
    "lint": "eslint ./src --ext .ts -c .eslint",
    "prepare": "husky install",
    "watch-build": "tsc -w -p ."
  },
  "files": [
    "build/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "codecov": "^3.8.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.0.0",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.0",
    "typedoc": "^0.22.10",
    "typedoc-plugin-merge-modules": "^3.1.0",
    "typescript": "~4.5.4",
    "yarn": "^1.22.0"
  },
  "keywords": [
    "chance",
    "dice",
    "dice rolls",
    "rpg",
    "rpgs",
    "die",
    "die rolling",
    "rand",
    "rolling",
    "typescript"
  ],
  "engines": {
    "node": ">=6.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**": [
      "yarn lint --cache --fix",
      "yarn generate:docs",
      "git add docs"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "rootDir": "src/"
  }
}
