{
  "name": "droll",
  "description": "Modern Dice-Rolling in JS (And Typescript!)",
  "license": "MIT",
  "author": "Alex Jarvis",
  "repository": {
    "type": "git",
    "url": "https://github.com/alxjrvs/droll.git"
  },
  "version": "0.1.1",
  "main": "build/src/index.js",
  "scripts": {
    "compile": "tsc -p .",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "test": "jest --coverage",
    "watch-build": "tsc -w -p ."
  },
  "dependencies": {
    "@types/lodash": "^4.14.104",
    "lodash": "^4.17.5",
    "log": "^1.4.0",
    "tslint": "^5.9.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "gts": "^0.5.4",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "typescript": "~2.6.1"
  },
  "keywords": [
    "chance",
    "dice",
    "dice rolls",
    "die",
    "die rolling",
    "rand",
    "rolling",
    "typescript"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "rootDir": "src/"
  }
}
