{
  "name": "randsum-monorepo",
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@eslint/js": "9.39.1",
    "@size-limit/preset-small-lib": "12.0.0",
    "@types/bun": "1.3.3",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "bunup": "0.16.10",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "fast-check": "4.5.1",
    "lefthook": "2.0.15",
    "mitata": "1.0.34",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "size-limit": "^12.0.0",
    "ts-unused-exports": "11.0.1",
    "typedoc": "^0.26.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.1.42",
  "catalog": {
    "fast-check": "4.5.1",
    "@types/bun": "1.3.3",
    "mitata": "1.0.34",
    "typescript": "5.9.3"
  },
  "size-limit": [
    { "path": "packages/roller/dist/index.js", "limit": "10 KB" },
    { "path": "packages/blades/dist/index.js", "limit": "7 KB" },
    { "path": "packages/fifth/dist/index.js", "limit": "7 KB" },
    { "path": "packages/daggerheart/dist/index.js", "limit": "7 KB" },
    { "path": "packages/root-rpg/dist/index.js", "limit": "7 KB" },
    { "path": "packages/salvageunion/dist/index.js", "limit": "170 KB" },
    { "path": "packages/pbta/dist/index.js", "limit": "7 KB" }
  ],
  "scripts": {
    "prepare": "lefthook install",
    "build": "bun run --bun --filter \"*\" build",
    "test": "bun test --recursive",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-dir=./coverage",
    "lint": "bun run --bun --filter \"*\" lint",
    "format": "bun run --bun --filter \"*\" format",
    "format:check": "bun run --bun --filter \"*\" format:check",
    "typecheck": "bun run --bun --filter \"*\" typecheck",
    "size": "size-limit",
    "size:check": "size-limit --json",
    "docs": "typedoc --out docs/api packages/roller/src/index.ts",
    "check:exports": "ts-unused-exports tsconfig.json --ignoreFiles='**/__tests__/**' --ignoreFiles='**/test-utils/**'",
    "bench": "bun run packages/roller/__benchmarks__/roll.bench.ts",
    "bench:ci": "bun run packages/roller/__benchmarks__/roll.bench.ts --json > benchmark-results.json",
    "check:all": "bun run lint && bun run format:check && bun run typecheck && bun test && bun run build && bun run size && bun run site:build",
    "fix:all": "bun run lint -- --fix && bun run format",
    "site:build": "bun --filter @randsum/site build",
    "site:dev": "bun --filter @randsum/site dev",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "version": "bun pm version",
    "version:patch": "bun pm version patch",
    "version:minor": "bun pm version minor",
    "version:major": "bun pm version major",
    "publish": "bun run build && bun run test && bun run lint && bun run typecheck && bun --filter \"*\" publish --access=public --no-git-checks"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}
