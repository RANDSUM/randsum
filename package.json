{
  "name": "randsum-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:core": "bun run --cwd packages/core build",
    "build:notation": "bun run --cwd packages/notation build",
    "build:dice": "bun run --cwd packages/dice build",
    "build:5E": "bun run --cwd packages/5E build",
    "build:root-rpg": "bun run --cwd packages/root-rpg build",
    "build:blades": "bun run --cwd packages/blades build",
    "build:all": "bun run build:core && bun run build:notation && bun run build:dice && bun run build:5E && bun run build:root-rpg && bun run build:blades",
    "test": "bun run build:all && bun test --cwd=packages",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier . --write",
    "format": "prettier . --check",
    "ts:check": "tsc --noEmit --erasableSyntaxOnly",
    "dev": "bun run build:watch",
    "build:watch": "bun run build:all --watch",
    "test:ci": "bun run test --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "prettier": {
    "endOfLine": "auto",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "embeddedLanguageFormatting": "auto"
  }
}
