{
  "name": "randsum-monorepo",
  "type": "module",
  "workspaces": [
    "packages/*",
    "gamePackages/*"
  ],
  "scripts": {
    "ci": "bunx moon ci",
    "build": "bunx moon :build",
    "test": "bunx moon :test",
    "lint": "bunx moon :lint",
    "lint:fix": "bunx moon :lint -- --fix",
    "format": "bunx moon :format",
    "format:check": "bunx moon :formatCheck",
    "ts:check": "bunx moon :tsCheck",
    "test:ci": "bunrun test --coverage"
  },
  "trustedDependencies": [
    "@moonrepo/cli"
  ],
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@moonrepo/cli": "^1.38.0",
    "@randsum/core": "workspace:~",
    "@randsum/dice": "workspace:~",
    "@randsum/notation": "workspace:~",
    "@types/bun": "^1.2.17",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "bunup": "^0.7.6",
    "eslint": "^9.30.0",
    "eslint-config-expo": "^9.2.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "engines": {
    "node": "latest"
  }
}