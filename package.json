{
  "name": "randsum-monorepo",
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/bun": "1.3.3",
    "@typescript-eslint/eslint-plugin": "8.48.0",
    "@typescript-eslint/parser": "8.48.0",
    "bunup": "0.16.10",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "ts-unused-exports": "11.0.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.1.42",
  "scripts": {
    "build": "bun --filter \"*\" build",
    "test": "bun --filter \"*\" test",
    "lint": "bun --filter \"*\" lint",
    "format": "bun --filter \"*\" format",
    "format:check": "bun --filter \"*\" format:check",
    "typecheck": "bun --filter \"*\" typecheck",
    "check:all": "bun run lint && bun run format:check && bun run typecheck && bun run test && bun run site:build",
    "fix:all": "bun run lint -- --fix && bun run format",
    "site:build": "bun --filter @randsum/site build",
    "site:dev": "bun --filter @randsum/site dev",
    "version": "bun pm version",
    "version:patch": "bun pm version patch",
    "version:minor": "bun pm version minor",
    "version:major": "bun pm version major",
    "publish": "bun run build && bun run test && bun run lint && bun run typecheck && bun --filter \"*\" publish --access=public --no-git-checks"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "salvageunion-reference": "2.3.2"
  },
  "version": "0.1.0"
}
