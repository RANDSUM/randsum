{
  "name": "randsum",
  "version": "8.0.1",
  "author": "Alex Jarvis",
  "icon": "https://raw.githubusercontent.com/RANDSUM/randsum-ts/main/icon.webp",
  "description": "The world's most powerful, flexible, and easy-to-use JS dice-roller.",
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum-ts ",
  "keywords": [
    "dice",
    "d20",
    "dice roller",
    "rpg dice roller",
    "roll",
    "d&d",
    "dnd",
    "rpg",
    "ttrpg",
    "rpgs",
    "ttrpgs",
    "tabletop",
    "dungeons",
    "dragons",
    "roleplaying game",
    "rand",
    "random",
    "RNG",
    "notation",
    "typescript",
    "bun"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "src/tests"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RANDSUM/randsum-ts.git"
  },
  "sideEffects": false,
  "scripts": {
    "analyze": "size-limit",
    "build": "bun run clean && bun run build.ts",
    "clean": "rm -rf ./dist/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier . --write",
    "format": "prettier . --check",
    "gen:docs": "typedoc ./src/index.ts",
    "ts:check": "tsc --noEmit --erasableSyntaxOnly",
    "local:check": "bun lint:fix && bun format:fix && bun ts:check && bun run build",
    "prepublish": "bun run build",
    "postversion": "git push --no-verify && git push --tags --no-verify"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "4 KB"
    }
  ],
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/bun": "1.2.5",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^8.28.0",
    "bun-plugin-dts": "^0.3.0",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "size-limit": "^11.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "prettier": {
    "endOfLine": "auto",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true
  },
  "type": "module",
  "dependencies": {
    "uuid": "^11.1.0"
  },
  "resolutions": {
    "bun-types": "canary"
  }
}
