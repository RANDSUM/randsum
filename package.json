{
  "name": "randsum-monorepo",
  "type": "module",
  "workspaces": [
    "packages/*",
    "gamePackages/*"
  ],
  "scripts": {
    "ci": "bunx moon ci",
    "build": "bunx moon :build",
    "test": "bunx moon :test",
    "lint": "bunx moon :lint",
    "lint:fix": "bunx moon :lint -- --fix",
    "ts:check": "bunx moon :tsCheck",
    "test:ci": "bunrun test --coverage",
    "docs:generate": "rm -rf docs/api/generated /tmp/typedoc-randsum && typedoc && cp -r /tmp/typedoc-randsum docs/api/generated && rm -rf /tmp/typedoc-randsum",
    "docs:serve": "cd docs && python -m http.server 8000",
    "docs:build": "bun run build && bun run docs:generate",
    "site:build": "bun run docs:build",
    "site:dev": "bun run docs:serve"
  },
  "trustedDependencies": [
    "@moonrepo/cli"
  ],
  "devDependencies": {
    "@randsum/core": "workspace:~",
    "@randsum/dice": "workspace:~",
    "@randsum/notation": "workspace:~",
    "@eslint/js": "^9.29.0",
    "@moonrepo/cli": "^1.37.2",
    "@types/bun": "^1.2.16",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "bunup": "^0.7.6",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "engines": {
    "node": "latest"
  }
}