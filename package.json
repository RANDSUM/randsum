{
  "name": "randsum-monorepo",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ci": "bunx moon ci",
    "build": "bunx moon :build",
    "test": "bunx moon :test -u",
    "lint": "bunx moon :lint",
    "lint:fix": "bunx moon :lint -- --fix",
    "format": "bunx moon :format",
    "format:check": "bunx moon :formatCheck",
    "ts:check": "bunx moon :tsCheck",
    "test:ci": "bunrun test --coverage"
  },
  "trustedDependencies": [
    "@moonrepo/cli"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.30.1",
    "@moonrepo/cli": "^1.38.2",
    "@types/bun": "^1.2.17",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "bunup": "^0.8.54",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "engines": {
    "node": "latest"
  }
}