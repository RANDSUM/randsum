{
  "name": "randsum-monorepo",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ci": "bunx moon ci",
    "build": "bunx moon :build",
    "test": "bunx moon :test -u",
    "lint": "bunx moon :lint",
    "lint:fix": "bunx moon :lint -- --fix",
    "format": "bunx moon :format",
    "format:check": "bunx moon :formatCheck",
    "style:fix": "bunx moon :lint && bunx moon :format",
    "ts:check": "bunx moon :tsCheck",
    "docs": "typedoc",
    "docs:serve": "bunx serve docs"
  },
  "trustedDependencies": [
    "@moonrepo/cli"
  ],
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@moonrepo/cli": "^1.38.5",
    "@types/bun": "^1.2.18",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "bunup": "^0.8.60",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "engines": {
    "node": "latest"
  }
}
