{
  "name": "randsum-monorepo",
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/bun": "1.3.2",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "bunup": "0.15.14",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "ts-unused-exports": "11.0.1",
    "typescript-eslint": "8.47.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.1.42",
  "scripts": {
    "build": "bun run --filter @randsum/roller build && bun run --filter './packages/*' build",
    "build:roller": "bun run --filter @randsum/roller build",
    "test": "bun run --filter './packages/*' test",
    "test:update": "bun run --filter './packages/*' test -- -u",
    "lint": "bun run --filter './packages/*' lint",
    "lint:fix": "bun run --filter './packages/*' lint -- --fix",
    "format": "bun run --filter './packages/*' format",
    "format:check": "bun run --filter './packages/*' format:check",
    "style:fix": "bun run lint:fix && bun run format",
    "ts:check": "bun run --filter './packages/*' ts:check",
    "ci": "bun run build && bun run test && bun run ts:check && bun run lint && bun run format:check",
    "version": "bun pm version",
    "version:patch": "bun pm version patch",
    "version:minor": "bun pm version minor",
    "version:major": "bun pm version major",
    "publish": "bun run build && bun run test && bun run lint && bun run ts:check && bun run --filter './packages/*' publish --access=public --no-git-checks"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "salvageunion-reference": "2.0.6"
  }
}
