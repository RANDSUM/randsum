{
  "name": "randsum-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ci": "bun moon ci",
    "build": "bun moon :build",
    "test": "bun moon :test",
    "lint": "bun moon :lint",
    "lint:fix": "bun moon :lint:fix",
    "format": "bun moon :format",
    "format:fix": "bun moon :format:fix",
    "ts:check": "bun moon :tsCheck",
    "test:ci": "bun run test --coverage",
    "docs": "typedoc --entryPointStrategy packages --out docs/api packages/*",
    "docs:serve": "npx serve docs"
  },
  "trustedDependencies": [
    "@moonrepo/cli"
  ],
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@moonrepo/cli": "^1.34.1",
    "@types/bun": "1.2.8",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "bunup": "^0.3.20",
    "eslint": "^9.23.0",
    "npm": "^11.2.0",
    "prettier": "^3.5.3",
    "typedoc": "^0.25.12",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0"
  }
}
