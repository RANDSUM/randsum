{
  "name": "randsum-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ci": "bunx moon ci",
    "build": "bunx moon :build",
    "test": "bunx moon :test",
    "lint": "bunx moon :lint",
    "lint:fix": "bunx moon :lint -- --fix",
    "format": "bunx moon :format",
    "format:fix": "bunx moon :format",
    "ts:check": "bunx moon :tsCheck",
    "test:ci": "bunrun test --coverage"
  },
  "devDependencies": {
    "@randsum/core": "workspace:~",
    "@randsum/dice": "workspace:~",
    "@randsum/notation": "workspace:~",
    "@eslint/js": "^9.27.0",
    "@moonrepo/cli": "^1.36.1",
    "@types/bun": "^1.2.14",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "bunup": "^0.7.6",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": "latest"
  }
}