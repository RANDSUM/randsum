{
  "name": "randsum-monorepo",
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@size-limit/preset-small-lib": "12.0.0",
    "@types/bun": "1.3.8",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "bunup": "0.16.22",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "fast-check": "4.5.3",
    "lefthook": "2.0.16",
    "mitata": "1.0.34",
    "prettier": "3.8.1",
    "prettier-plugin-astro": "0.14.1",
    "size-limit": "12.0.0",
    "ts-unused-exports": "11.0.1",
    "typedoc": "0.28.16",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.3.8"
  },
  "catalog": {
    "fast-check": "4.5.1",
    "@types/bun": "1.3.3",
    "mitata": "1.0.34",
    "typescript": "5.9.3"
  },
  "size-limit": [
    {
      "path": "packages/roller/dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "packages/blades/dist/index.js",
      "limit": "7 KB"
    },
    {
      "path": "packages/fifth/dist/index.js",
      "limit": "7 KB"
    },
    {
      "path": "packages/daggerheart/dist/index.js",
      "limit": "7 KB"
    },
    {
      "path": "packages/root-rpg/dist/index.js",
      "limit": "7 KB"
    },
    {
      "path": "packages/salvageunion/dist/index.js",
      "limit": "170 KB"
    },
    {
      "path": "packages/pbta/dist/index.js",
      "limit": "7 KB"
    }
  ],
  "scripts": {
    "prepare": "lefthook install",
    "help": "bun scripts/help.ts",
    "create:game": "bun scripts/create-game-package.ts",
    "build": "bun run --bun --filter \"*\" build",
    "test": "bun test --recursive",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-dir=./coverage",
    "lint": "bun run --bun --filter \"*\" lint",
    "format": "bun run --bun --filter \"*\" format",
    "format:check": "bun run --bun --filter \"*\" format:check",
    "typecheck": "bun run --bun --filter \"*\" typecheck",
    "size": "size-limit",
    "size:check": "size-limit --json",
    "docs": "typedoc",
    "docs:site": "typedoc --out packages/site/public/api",
    "check:exports": "ts-unused-exports tsconfig.json --ignoreFiles='__tests__|test-utils|[\\\\/]dist[\\\\/]' --maxIssues=50",
    "bench": "bun run packages/roller/__benchmarks__/roll.bench.ts",
    "bench:ci": "bun run packages/roller/__benchmarks__/roll.bench.ts --json > benchmark-results.json",
    "profile": "bun --cpu-prof packages/roller/__benchmarks__/roll.bench.ts",
    "profile:md": "bun --cpu-prof-md packages/roller/__benchmarks__/roll.bench.ts",
    "mcp:compile": "bun build --compile packages/mcp/src/index.ts --outfile dist/randsum-mcp",
    "mcp:compile:all": "bun run mcp:compile && bun build --compile --target=bun-linux-x64 packages/mcp/src/index.ts --outfile dist/randsum-mcp-linux && bun build --compile --target=bun-windows-x64 packages/mcp/src/index.ts --outfile dist/randsum-mcp.exe",
    "check:all": "bun run lint && bun run format:check && bun run typecheck && bun test && bun run build && bun run size && bun run site:build",
    "fix:all": "bun run lint -- --fix && bun run format",
    "site:build": "bun --filter @randsum/site build",
    "site:dev": "bun --filter @randsum/site dev",
    "version": "bun pm version",
    "version:patch": "bun pm version patch",
    "version:minor": "bun pm version minor",
    "version:major": "bun pm version major",
    "publish": "bun run build && bun run test && bun run lint && bun run typecheck && bun --filter \"*\" publish --access=public --no-git-checks"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "overrides": {
    "qs": "6.14.1",
    "h3": "1.15.5",
    "tar": "7.5.7",
    "node-forge": "1.3.3",
    "jws": "3.2.3",
    "devalue": "5.6.2"
  }
}
