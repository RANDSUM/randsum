{
  "compilerOptions": {
    // Path Aliases
    "paths": {
      "@randsum/core": ["./packages/core/src"],
      "@randsum/dice": ["./packages/dice/src"],
      "@randsum/notation": ["./packages/notation/src"]
    },
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedDeclarations": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "packages/*/dist",
    "**/__tests__/**"
  ]
}
