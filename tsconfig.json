{
  "compilerOptions": {
    "paths": {
      "~patterns": [
        "./src/patterns.ts"
      ],
      "~tower": [
        "./src/tower/index.ts"
      ],
      "~dice": [
        "./src/dice/index.ts"
      ],
      "~faces": [
        "./src/faces/index.ts"
      ],
      "~notation": [
        "./src/notation/index.ts"
      ],
      "~src/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ESNext"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "types": [
      "bun-types"
    ]
  }
}
