{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "auto"
  ],
  "ignorePatterns": [
    "scripts",
    "tsconifg.json",
    "node_modules",
    "dist",
    "coverage",
    "*.md"
  ],
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "rules": {
        "const-case/uppercase": "off",
        "no-undef": "off",
        "max-classes-per-file": "off",
        "unicorn/new-for-builtins": "off",
        "unicorn/no-array-reduce": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "project": "./tsconfig.json",
    "extraFileExtensions": [
      ".json"
    ]
  }
}
