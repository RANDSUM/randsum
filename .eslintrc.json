{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "auto"
  ],
  "ignorePatterns": [
    "node_modules",
    "dist",
    "coverage",
    "rollup.config.js",
    "*.md"
  ],
  "parser": "@typescript-eslint/parser",
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "rules": {
        "no-undef": "off",
        "max-classes-per-file": "off",
        "unicorn/new-for-builtins": "off",
        "unicorn/no-array-reduce": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ]
}
