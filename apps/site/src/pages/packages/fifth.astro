---
import DocsLayout from '../../layouts/DocsLayout.astro'
import CodeExample from '../../components/CodeExample.astro'
import { getPackageById } from '../../utils/packageData'

const pkg = getPackageById('fifth')!
---

<DocsLayout title={pkg.displayName} description={pkg.description} package={pkg}>
  <section>
    <h2>Overview</h2>
    <p>
      <strong>@randsum/fifth</strong> provides comprehensive support for Dungeons & Dragons 5th Edition
      mechanics. This package includes ability checks, saving throws, attack rolls, damage rolls, and
      all the core mechanics needed to run D&D 5e games programmatically.
    </p>
  </section>

  <section>
    <h2>Installation</h2>
    <CodeExample
      code={pkg.examples.find(e => e.title === 'Installation')?.code || ''}
      language="bash"
      title="Installation"
    />
  </section>

  <section>
    <h2>Examples</h2>
    {
      pkg.examples
        .filter(e => e.title !== 'Installation')
        .map(example => {
          return (
            <CodeExample code={example.code} language={example.language} title={example.title} />
          )
        })
    }
  </section>
</DocsLayout>
