---
const currentPath = Astro.url.pathname
const isHome = currentPath === '/'
---

<nav class="navigation">
  <div class="container">
    <div class="nav-content">
      <a href="/" class="nav-logo">
        <img src="/randsum-logo.png" alt="RANDSUM" class="nav-logo-image" />
        <span class="nav-logo-text">RANDSUM</span>
      </a>
      <ul class="nav-links">
        <li>
          <a href="/" class={isHome ? 'nav-link nav-link-active' : 'nav-link'}> Home </a>
        </li>
        <li>
          <a
            href="/getting-started/"
            class={currentPath.includes('/getting-started') ? 'nav-link nav-link-active' : 'nav-link'}
          >
            Getting Started
          </a>
        </li>
        <li>
          <a
            href="/docs/"
            class={currentPath.includes('/docs') ? 'nav-link nav-link-active' : 'nav-link'}
          >
            Docs
          </a>
        </li>
        <li class="nav-dropdown">
          <button
            class={currentPath.includes('/packages/') || currentPath.includes('/tools/')
              ? 'nav-link nav-link-active nav-dropdown-toggle'
              : 'nav-link nav-dropdown-toggle'}
          >
            Code
            <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 12 12" fill="currentColor">
              <path d="M2 4L6 8L10 4" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <ul class="nav-dropdown-menu">
            <li class="dropdown-section-title">Core</li>
            <li>
              <a href="/packages/roller/" class="dropdown-link">Roller</a>
            </li>
            <li class="dropdown-divider"></li>
            <li class="dropdown-section-title">Games</li>
            <li>
              <a href="/packages/fifth/" class="dropdown-link">5th Edition</a>
            </li>
            <li>
              <a href="/packages/blades/" class="dropdown-link">Blades in the Dark</a>
            </li>
            <li>
              <a href="/packages/daggerheart/" class="dropdown-link">Daggerheart</a>
            </li>
            <li>
              <a href="/packages/pbta/" class="dropdown-link">Powered by the Apocalypse</a>
            </li>
            <li>
              <a href="/packages/root-rpg/" class="dropdown-link">Root RPG</a>
            </li>
            <li>
              <a href="/packages/salvageunion/" class="dropdown-link">Salvage Union</a>
            </li>
            <li class="dropdown-divider"></li>
            <li class="dropdown-section-title">Tools</li>
            <li>
              <a href="/packages/mcp/" class="dropdown-link">MCP Server</a>
            </li>
            <li>
              <a href="/tools/skill/" class="dropdown-link">AI Skill</a>
            </li>
            <li>
              <a href="/packages/discord-bot/" class="dropdown-link">Discord Bot</a>
            </li>
          </ul>
        </li>
      </ul>
      <a
        href="https://discord.com/oauth2/authorize?client_id=1290434147159904276&permissions=274877906944&scope=bot%20applications.commands"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-discord-button"
      >
        <svg class="discord-icon" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
