---
import Logo from './Logo.astro';
---

<header class="sticky top-0 z-50 w-full border-b border-gray-800 bg-gray-950/95 backdrop-blur supports-[backdrop-filter]:bg-gray-950/60">
  <div class="container flex h-16 items-center justify-between">
    <div class="flex items-center gap-6">
      <a href="/" class="flex items-center transition-opacity hover:opacity-80">
        <Logo size="md" showText={true} />
      </a>
      
      <nav class="hidden md:flex items-center gap-6">
        <a href="/docs" class="nav-link">Documentation</a>
        <a href="/packages" class="nav-link">Packages</a>
        <a href="/examples" class="nav-link">Examples</a>
      </nav>
    </div>

    <div class="flex items-center gap-4">
      <div class="hidden sm:flex items-center gap-2">
        <a 
          href="https://github.com/RANDSUM/randsum" 
          class="btn btn-ghost p-2"
          aria-label="GitHub Repository"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>

      <!-- Mobile menu button -->
      <button 
        class="md:hidden btn btn-ghost p-2"
        aria-label="Toggle menu"
        id="mobile-menu-button"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden border-t border-gray-800 bg-gray-950" id="mobile-menu" style="display: none;">
    <div class="container py-4">
      <nav class="flex flex-col gap-2">
        <a href="/docs" class="nav-link">Documentation</a>
        <a href="/packages" class="nav-link">Packages</a>
        <a href="/examples" class="nav-link">Examples</a>
        <div class="border-t border-gray-800 pt-2 mt-2">
          <a 
            href="https://github.com/RANDSUM/randsum" 
            class="nav-link flex items-center gap-2"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isHidden = mobileMenu.style.display === 'none';
      mobileMenu.style.display = isHidden ? 'block' : 'none';
    });
  }
</script>
