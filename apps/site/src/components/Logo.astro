---
export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl'
  showText?: boolean
  className?: string
}

const { size = 'md', showText = true, className = '' } = Astro.props

const sizeClasses = {
  sm: 'w-6 h-6',
  md: 'w-8 h-8',
  lg: 'w-12 h-12',
  xl: 'w-16 h-16'
}

const textSizeClasses = {
  sm: 'text-lg',
  md: 'text-xl',
  lg: 'text-2xl',
  xl: 'text-3xl'
}
---

<div class={`flex items-center gap-3 ${className}`}>
  <img
    src="/logo.webp"
    alt="RANDSUM Logo"
    class={`${sizeClasses[size]} object-contain`}
    loading="eager"
  />
  {
    showText && (
      <span class={`font-bold text-white ${textSizeClasses[size]}`}>
        RANDSUM
      </span>
    )
  }
</div>
