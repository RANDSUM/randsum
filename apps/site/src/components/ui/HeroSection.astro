---
import MainContent from '../MainContent.astro'

export interface Props {
  title: string
  subtitle?: string
  description?: string
  showLogo?: boolean
  showStats?: boolean
  showQuickExample?: boolean
  class?: string
}

const {
  title,
  subtitle,
  description,
  showLogo = false,
  showStats = false,
  showQuickExample = false,
  class: className = ''
} = Astro.props
---

<section
  class={`relative bg-gradient-to-br from-randsum-950 via-randsum-900 to-randsum-800 py-20 lg:py-32 ${className}`}
>
  {showLogo && (
    <div
      class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"
    >
    </div>
  )}

  <MainContent class="relative">
    <div class="text-center">
      {showLogo && (
        <!-- Logo -->
        <div class="flex justify-center mb-8">
          <img
            src="/icon.webp"
            alt="RANDSUM Logo"
            class="h-24 w-24 lg:h-32 lg:w-32 animate-bounce-subtle"
          />
        </div>
      )}

      <!-- Main heading -->
      <h1
        class="text-4xl lg:text-6xl xl:text-7xl font-bold text-silver-50 mb-6 leading-tight"
      >
        <span
          class="bg-gradient-to-r from-silver-50 via-silver-200 to-silver-50 bg-clip-text text-transparent"
        >
          {title}
        </span>
      </h1>

      {subtitle && (
        <!-- Tagline -->
        <p
          class="text-xl lg:text-2xl text-silver-200 mb-8 max-w-4xl mx-auto leading-relaxed"
        >
          {subtitle}
        </p>
      )}

      {description && (
        <!-- Subtitle -->
        <p class="text-lg text-silver-300 mb-12 max-w-3xl mx-auto">
          {description}
        </p>
      )}

      {showStats && (
        <!-- Stats -->
        <div
          class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12 max-w-2xl mx-auto"
        >
          <div class="text-center">
            <div class="text-3xl lg:text-4xl font-bold text-silver-50 mb-2">
              6+
            </div>
            <div class="text-sm text-silver-400 uppercase tracking-wide">
              RPG Systems
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl lg:text-4xl font-bold text-silver-50 mb-2">
              100%
            </div>
            <div class="text-sm text-silver-400 uppercase tracking-wide">
              Type Safe
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl lg:text-4xl font-bold text-silver-50 mb-2">
              âˆž
            </div>
            <div class="text-sm text-silver-400 uppercase tracking-wide">
              Possibilities
            </div>
          </div>
        </div>
      )}

      <!-- CTA Buttons Slot -->
      <slot name="cta" />

      {showQuickExample && (
        <!-- Quick example -->
        <div class="mt-16 max-w-2xl mx-auto">
          <div
            class="bg-randsum-900/50 backdrop-blur-sm border border-randsum-700 rounded-lg p-6"
          >
            <div class="text-sm text-silver-400 mb-3 text-left">
              Quick Example:
            </div>
            <div class="bg-randsum-950 rounded-md p-4 text-left">
              <code class="text-sm font-mono text-silver-200">
                <span class="text-games-blades-500">import</span>
                <span class="text-silver-300">&#123; roll &#125;</span>
                <span class="text-games-blades-500">from</span>
                <span class="text-games-fifth-500">'@randsum/roller'</span><br
                /><br />
                <span class="text-silver-400"
                  >// Roll 4d6, drop lowest (D&D ability score)</span
                ><br />
                <span class="text-games-daggerheart-500">roll</span><span
                  class="text-silver-300">(</span
                ><span class="text-games-fifth-500">'4d6L'</span><span
                  class="text-silver-300">)</span
                ><br /><br />
                <span class="text-silver-400">// Roll with advantage</span><br />
                <span class="text-games-daggerheart-500">roll</span><span
                  class="text-silver-300">(</span
                ><span class="text-games-fifth-500">'2d20H'</span><span
                  class="text-silver-300">)</span
                >
              </code>
            </div>
          </div>
        </div>
      )}
    </div>
  </MainContent>
</section>
