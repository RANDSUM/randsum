---
import { codeToHtml } from 'shiki'

interface Props {
  code: string
  language: 'typescript' | 'bash' | 'javascript' | 'json'
  title?: string
}

const { code, language, title } = Astro.props

// Map language aliases to Shiki language IDs
const languageMap: Record<string, string> = {
  bash: 'shell',
  typescript: 'typescript',
  javascript: 'javascript',
  json: 'json',
}

const shikiLanguage = languageMap[language] || language

// Generate highlighted code HTML
const highlightedCode = await codeToHtml(code, {
  lang: shikiLanguage,
  theme: 'github-dark',
})
---

<div class="code-example">
  {title && <h4 class="code-example-title">{title}</h4>}
  <div class="code-example-content">
    <Fragment set:html={highlightedCode} />
  </div>
</div>

<style>
  .code-example {
    margin: var(--spacing-lg) 0;
  }

  .code-example-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-sm);
    padding-bottom: var(--spacing-xs);
    border-bottom: var(--border-width) solid var(--color-border);
    color: var(--color-text);
  }

  .code-example-content {
    border: var(--border-width) solid var(--color-border);
    padding: var(--spacing-lg);
    background-color: var(--color-bg-code);
    overflow-x: auto;
    box-shadow: var(--shadow-sm);
    border-radius: 6px;
  }

  .code-example-content :global(pre) {
    margin: 0;
    padding: 0;
    border: none;
    box-shadow: none;
    background: transparent !important;
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
    overflow-x: auto;
  }

  .code-example-content :global(pre code) {
    display: block;
    padding: 0;
    background: transparent !important;
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
  }

  /* Ensure Shiki's inline styles work properly */
  .code-example-content :global(.shiki) {
    background: transparent !important;
    padding: 0;
  }
</style>
