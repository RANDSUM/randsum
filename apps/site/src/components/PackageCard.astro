---
import type { PackageInfo } from '../utils/packageData'
import NpmVersion from './NpmVersion.astro'

interface Props {
  package: PackageInfo
}

const { package: pkg } = Astro.props
const packageColor = pkg.color || 'var(--color-border)'
const isGradient = packageColor.includes('gradient')
const packageUrl = pkg.id === 'skill' ? `/tools/${pkg.id}/` : `/packages/${pkg.id}/`
---

<a
  href={packageUrl}
  class={`package-card ${isGradient ? 'package-card-gradient' : ''}`}
  style={isGradient ? `--package-gradient: ${packageColor};` : `--package-color: ${packageColor};`}
>
  <div class="package-card-header" style={`border-color: ${packageColor}`}>
    <h3 class="package-card-title">{pkg.displayName}</h3>
    <NpmVersion package={pkg.npmPackage} />
  </div>
  <p class="package-card-description">{pkg.description}</p>
  {
    pkg.features && pkg.features.length > 0 && (
      <ul class="package-card-features">
        {pkg.features.slice(0, 3).map(feature => (
          <li>{feature}</li>
        ))}
      </ul>
    )
  }
  <div class="package-card-footer">
    <span class="package-card-link">View Documentation →</span>
  </div>
</a>

<style>
  .package-card {
    display: block;
    border: var(--border-width) solid var(--color-border);
    padding: var(--spacing-xl);
    background-color: var(--color-bg);
    box-shadow: var(--shadow-sm);
    transition:
      border-color var(--transition-fast),
      box-shadow var(--transition-fast);
    text-decoration: none;
    color: inherit;
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    border-radius: 8px;
  }

  .package-card > * {
    position: relative;
    z-index: 1;
  }

  .package-card:hover {
    border-color: var(--package-color, var(--color-border-accent));
    box-shadow: var(--shadow-md);
  }

  /* Apply gradient border for gradient colors on hover */
  .package-card-gradient:hover {
    border: var(--border-width) solid transparent;
    border-image: var(--package-gradient);
    border-image-slice: 1;
    box-shadow: var(--shadow-md);
  }

  .package-card-header {
    border-bottom: var(--border-width) solid;
    padding-bottom: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .package-card-title {
    font-size: var(--font-size-2xl);
    margin: 0;
    font-weight: var(--font-weight-bold);
  }


  .package-card-description {
    flex-grow: 1;
    margin: 0 0 var(--spacing-md) 0;
    line-height: var(--line-height-relaxed);
    color: var(--color-text-alt);
  }

  .package-card-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-md) 0;
  }

  .package-card-features li {
    padding: var(--spacing-xs) 0;
    padding-left: var(--spacing-md);
    position: relative;
    font-size: var(--font-size-sm);
    color: var(--color-text-alt);
  }

  .package-card-features li::before {
    content: '•';
    position: absolute;
    left: 0;
    font-weight: var(--font-weight-bold);
    color: var(--color-border);
  }

  .package-card-footer {
    margin-top: auto;
    padding-top: var(--spacing-md);
    border-top: var(--border-width) solid var(--color-border-light);
  }

  .package-card-link {
    font-weight: var(--font-weight-semibold);
    color: var(--color-primary);
    text-decoration: none;
  }
  
  .package-card:hover .package-card-link {
    color: var(--color-primary-dark);
  }
</style>
