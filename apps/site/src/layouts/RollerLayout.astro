---
import '../styles/global.css'
import Sidebar from '../components/Sidebar.astro'
import {
  mainNavigation,
  rollerAdditionalNavigation
} from '../config/navigation'

export interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={description ||
        'RANDSUM - Advanced dice rolling for tabletop gaming'}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/webp" href="/icon.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-full bg-randsum-950 text-silver-50">
    <div class="min-h-full">
      <!-- Sidebar -->
      <Sidebar
        navigationItems={mainNavigation}
        additionalItems={rollerAdditionalNavigation}
      />

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <div class="flex items-center justify-between bg-randsum-900 px-4 py-3">
          <button
            type="button"
            class="inline-flex items-center justify-center rounded-md p-2 text-silver-400 hover:bg-randsum-800 hover:text-silver-50 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-silver-500"
            id="mobile-menu-button"
          >
            <span class="sr-only">Open main menu</span>
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
            </svg>
          </button>
          <div class="flex items-center">
            <img class="h-8 w-auto" src="/icon.webp" alt="RANDSUM" />
            <span class="ml-2 text-lg font-bold text-silver-50">RANDSUM</span>
          </div>
          <div class="w-10"></div>
          <!-- Spacer for centering -->
        </div>
      </div>

      <!-- Main content -->
      <main class="flex-1 lg:pl-64">
        <div class="pt-16 lg:pt-0">
          <slot />
        </div>
      </main>
    </div>

    <script>
      // Mobile menu toggle functionality
      document.addEventListener('DOMContentLoaded', function () {
        const mobileMenuButton = document.getElementById('mobile-menu-button')
        const mobileMenu = document.getElementById('mobile-menu')
        const mobileMenuOverlay = document.getElementById('mobile-menu-overlay')

        function toggleMobileMenu() {
          if (mobileMenu) {
            mobileMenu.classList.toggle('hidden')
          }
        }

        function closeMobileMenu() {
          if (mobileMenu) {
            mobileMenu.classList.add('hidden')
          }
        }

        if (mobileMenuButton) {
          mobileMenuButton.addEventListener('click', toggleMobileMenu)
        }

        if (mobileMenuOverlay) {
          mobileMenuOverlay.addEventListener('click', closeMobileMenu)
        }

        // Close mobile menu when clicking on a link
        const mobileMenuLinks = document.querySelectorAll('#mobile-menu a')
        mobileMenuLinks.forEach((link) => {
          link.addEventListener('click', closeMobileMenu)
        })

        // Close mobile menu on escape key
        document.addEventListener('keydown', function (event) {
          if (event.key === 'Escape') {
            closeMobileMenu()
          }
        })
      })
    </script>
  </body>
</html>
