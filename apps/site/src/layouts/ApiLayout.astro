---
import DocumentationLayout from './DocumentationLayout.astro';

export interface Props {
  title: string;
  description: string;
  packageName?: string;
}

const { title, description, packageName } = Astro.props;
---

<DocumentationLayout title={title} description={description}>
  <div class="prose max-w-none">
    <!-- API Header -->
    <div class="not-prose mb-8 border-b border-gray-800 pb-6">
      <h1 class="text-4xl font-bold text-white mb-2">{title}</h1>
      <p class="text-xl text-gray-300 leading-relaxed">{description}</p>
      {packageName && (
        <div class="mt-4">
          <span class="badge badge-primary">{packageName}</span>
        </div>
      )}
    </div>

    <!-- API Content -->
    <slot />
  </div>
</DocumentationLayout>
