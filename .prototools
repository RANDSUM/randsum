# RANDSUM Project Configuration
# This file configures the development tools used in this project

# Runtime
[runtime]
name = "bun"

# TypeScript
[typescript]
enabled = true
config_file = "tsconfig.json"
strict = true
module = "ESNext"
target = "ESNext"

# ESLint
[eslint]
enabled = true
config_file = "eslint.config.js"
flat_config = true

# Prettier
[prettier]
enabled = true
config_file = ".prettierrc"
ignore_file = ".prettierignore"

# Moon
[moon]
enabled = true
workspace_file = ".moon/workspace.yml"
tasks_file = ".moon/tasks.yml"
toolchain_file = ".moon/toolchain.yml"

# Build
[build]
command = "bun moon :build"
output_dir = "dist"
source_dir = "src"
entry_file = "src/index.ts"

# Test
[test]
command = "bun moon :test"
coverage = true
framework = "bun:test"

# Format
[format]
command = "bun moon :format"
fix_command = "bun moon :format:fix"

# Lint
[lint]
command = "bun moon :lint"
fix_command = "bun moon :lint:fix"

# TypeCheck
[typecheck]
command = "bun moon :tsCheck"

# Documentation
[docs]
command = "bun run docs"
output_dir = "docs/api"
tool = "typedoc"

# Package Manager
[package_manager]
name = "bun"
workspaces = ["packages/*"]

# CI/CD
[ci]
provider = "github"
workflow_dir = ".github/workflows"
